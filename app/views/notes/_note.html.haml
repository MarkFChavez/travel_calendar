.row.bottom10
  .col-lg-12
    .well
      %span
        %u
          = fa_icon("clock-o")
          #{note.created_at.strftime("%b %d, %Y %I:%M %P")}

      (
      = link_to "edit", edit_url
      or
      = link_to "remove", remove_url, method: :delete, class: "text-danger", data: { confirm: "Are you sure you want to remove this resource?" }
      )

      - if note.attachment?
        .top10
          %span 
            Attachment:
            = link_to note.attachment_file_name, note.attachment.url


      .top10
        = note.content.html_safe
