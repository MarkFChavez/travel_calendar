.row
  .col-lg-6.col-lg-offset-3
    %p.lead.text-center 
      Add a note for your event `#{@event.name}`

    = form_for [@event, @note], html: { multipart: true } do |f|
      = render "notes/form", f: f

      .top10
        = f.submit "Add this note", class: "btn btn-primary btn-lg"
        = link_to "Cancel", edit_event_path(@event), class: "btn btn-default btn-lg"
