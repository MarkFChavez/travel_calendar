.row
  .col-lg-6.col-lg-offset-3
    = form_for @event do |f|
      %p.lead.text-center Create an Event

      = render partial: "form", locals: { f: f }

      .row.form-group.text-center
        .col-lg-12
          = f.submit "Create", class: "btn btn-primary btn-lg"
          = link_to "Cancel", root_path(start_date: @event.start_time), class: "btn btn-default btn-lg"
